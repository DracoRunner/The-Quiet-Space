generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEON_DATABASE_URL")
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String
  readTime    Int?
  imageSeed   String
  category    String?
  format      Format  @default(markdown)
  author      String?  @default("Anonymous")
  publishedAt DateTime? @default(now())
}

enum Format {
  markdown
  html
  text
}

model Confession {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now()) @map("created_at")
}

model Booking {
  id        String   @id @default(uuid())
  name      String
  email     String
  when      DateTime
  reason    String
  status    String   @default("pending")
  createdAt DateTime @default(now())
}